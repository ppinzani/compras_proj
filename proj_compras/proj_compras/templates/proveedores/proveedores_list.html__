{% extends 'base.html' %}
{% block title %}Proveedores{% endblock title %}

{% block content %}
    <div id="content-container" class="container p-none">
        <div id="al-container" class="side-p">
            <div id="al-control">
                <h3 class="ad-mh">Proveedores
                    {# Add Account Link #}
                    {% if perms.proveedores.can_add %}
                    <span class="pull-right">
                        <a href="{% url 'proveedores:nuevo' %}"
                           class="btn btn-link p-r-none">+ Nuevo Proveedor</a>
                    </span>
                    {% endif %}
                </h3>
                {# Account Search Form #}
                <form action="{% url 'proveedores:lista' %}" method="get">
                    <input id="al-search" type="text"
                           name="proveedor" value="{{ request.GET.proveedor }}"
                           class="form-control" />
                    <input type="submit"
                           value="Search" class="btn btn-success" />
                </form>
            </div>
            {# List of Accounts #}
            <ul id="al-group" class="strip-list">
                {% for proveedor in proveedores %}
                    <li class="al-item">
                        <a href="{{ proveedor.get_absolute_url }}"><h4 class="al-name">{{ proveedor.display_name }} </h4></a>
                        <span class="al-created">fecha alta {{ proveedor.fecha_alta }}</span>
                    </li>
                {% endfor %}
            </ul>
            {# Pagination Section #}
            {% if is_paginated %}
                <div id="al-paginate">
                    <ul class="strip-list al-pgnt-list">
                        {% if page_obj.has_previous %}
                            <li class="pull-left">
                                <a href="{% url 'proveedores:lista' %}?page={{ page_obj.previous_page_number }}
                                {% if request.GET.proveedor %}&proveedor={{ request.GET.proveedor }}{% endif %}">Prev</a>
                            </li>
                        {% endif %}
                        {% if page_obj.has_next %}
                            <li class="pull-right">
                                <a href="{% url 'proveedores:lista' %}?page={{ page_obj.next_page_number }}
                                {% if request.GET.proveedor %}&proveedor={{ request.GET.proveedor }}{% endif %}">Next</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock content %}